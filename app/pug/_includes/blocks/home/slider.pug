section.site-slider(role="complementary")
  #carouselSlider.carousel.slide.carousel-slider(data-ride='carousel')
    ol.carousel-indicators(role="list")
      li.active(data-target='#carouselSlider', data-slide-to='0', role='listitem')
      li(data-target='#carouselSlider', data-slide-to='1', role='listitem')
      li(data-target='#carouselSlider', data-slide-to='2', role='listitem')
    .carousel-inner
      .carousel-item.active
        .carousel-item-wrap(data-js='slide-item')
          img.carousel-item-img(src='images/slider-img-01.png', alt='First slide', role="img")
        .carousel-caption
          h2.carousel-caption-title(role="heading")
            | A Compelling Message about&nbsp;
            span.carousel-caption-highlighter Ease-of-Transition
      .carousel-item
        .carousel-item-wrap(data-js='slide-item')
          img.carousel-item-img(src='images/slider-img-01.png', alt='Second slide', role="img")
        .carousel-caption
          h2.carousel-caption-title(role="heading")
            | A Compelling Message about&nbsp;
            span.carousel-caption-highlighter Ease-of-Transition
      .carousel-item
        .carousel-item-wrap(data-js='slide-item')
          img.carousel-item-img(src='images/slider-img-01.png', alt='Third slide', role="img")
        .carousel-caption
          h2.carousel-caption-title(role="heading")
            | A Compelling Message about&nbsp;
            span.carousel-caption-highlighter Ease-of-Transition
    .carousel-navigation
      a.carousel-control-prev(href='#carouselSlider', role='button', data-slide='prev', aria-label="Previous")
        i.fa.fa-chevron-left(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselSlider', role='button', data-slide='next', aria-label="Next")
        i.fa.fa-chevron-right(aria-hidden='true')
        span.sr-only Next
